<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context="inc.developer.vivonk.paybhama.Activities.PaymentVarifierActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payment_complete_details"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:background="#fff"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="0dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:id="@+id/payment_complete_details_text"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/payment_complete_aadhar_number_last"
        android:text="LAST 4 DIGIT OF YOUR AADHAR NUMBER  "
        android:layout_gravity="center"
        android:textColor="#000"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/payment_complete_aadhar_number_last_four_digit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:inputType="phone"
        android:hint="@string/last_four_digit"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_gradient"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:maxLength="4"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="#aaa"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/payment_complete_aadhar_number_first"
        android:text="FIRST 4 DIGIT OF YOUR AADHAR NUMBER  "
        android:textColor="#000"
        android:layout_gravity="center"

        android:textStyle="bold"/>

        <EditText
            android:id="@+id/payment_complete_aadhar_number_first_four_digit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_gradient"
            android:gravity="center"
            android:hint="@string/first_four_digit"
            android:inputType="phone"
            android:maxLength="4"
            android:paddingBottom="10dp"
            android:paddingEnd="0dp"
            android:paddingTop="10dp"
            android:textSize="18sp" />

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:background="#aaa"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/payment_complete_account_number_last"
        android:text="LAST 4 DIGIT OF YOUR ACCOUNT NUMBER  "        android:layout_gravity="center"

        android:textColor="#000"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/payment_complete_account_number_last_four_digit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="@string/last_four_digit"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_gradient"
        android:paddingTop="10dp"
        android:inputType="phone"
        android:paddingBottom="10dp"
        android:maxLength="4"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="#aaa"/>

        <TextView
            android:id="@+id/payment_complete_account_number_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIRST 4 DIGIT OF YOUR AADHAR NUMBER  "
            android:textColor="#000"        android:layout_gravity="center"

            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
        android:id="@+id/payment_complete_account_number_first_four_digit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18sp"
        android:paddingEnd="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
            android:hint="@string/first_four_digit"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_gradient"
        android:paddingTop="10dp"
        android:inputType="phone"
        android:paddingBottom="10dp"
        android:maxLength="4"/>

        <Button
            android:id="@+id/proceed_to_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_button_colored"
            android:paddingTop="10dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#fff" />
    </LinearLayout>

    </ScrollView>
</LinearLayout>
