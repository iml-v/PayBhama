<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="inc.developer.vivonk.paybhama.Activities.SignUpActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_2"
        android:layout_gravity="center"
        android:background="#aaa"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/otp_text_view"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorPrimary"
            android:text="Please enter the OTP below which is sent on your registered mobile number"
            android:textAlignment="textStart"
            android:textSize="18sp" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/merchant_otp_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:hint="One Time Password"
            app:hintEnabled="true">

            <EditText
                android:id="@+id/merchant_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/border_input"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_next_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border_button_colored"
            android:paddingTop="10dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#fff" />
        </LinearLayout>
        </ScrollView>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_3"
        android:layout_gravity="center"
        android:background="#aaa"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:baselineAligned="false">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/merchant_first_name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:hint="First Name"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/merchant_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/border_input"
                    android:inputType="textPersonName"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/merchant_last_name_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:hint="Last Name"
                    app:hintEnabled="true">

                    <EditText
                        android:id="@+id/merchant_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/border_input"
                        android:inputType="textPersonName"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_gradient"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:weightSum="3"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Gender"
                    android:textSize="18sp"
                    />

                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:id="@+id/rb_male"
                        android:text="Male"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/rb_female"
                        android:text="Female"
                        />
                </RadioGroup>

            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/merchant_address_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:hint="Address"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/merchant_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/border_input"
                    android:inputType="text"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/merchant_password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:hint="Password"
                app:hintEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/merchant_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/border_input"
                    android:inputType="textPassword"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:textSize="18sp"
                    android:password="true"/>
            </android.support.design.widget.TextInputLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Show Password"
                android:id="@+id/checkbox_password"
                android:textColor="@color/colorPrimary"/>
            <Button
                android:id="@+id/button_next_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border_button_colored"
                android:paddingTop="10dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#fff" />
        </LinearLayout>
        </ScrollView>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="#aaa"
        app:cardCornerRadius="6dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/merchant_aadhar_number_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:hint="Aadhar Number"

                    app:hintEnabled="true">

                    <EditText
                        android:id="@+id/merchant_aadhar_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/border_input"
                        android:inputType="number"
                        android:maxLength="12"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_input">

                    <Spinner
                        android:id="@+id/merchant_bank_name_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/border_input"
                        android:entries="@array/india_banks"
                        android:paddingBottom="10dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"
                        android:textSize="18dp" />
                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/merchant_account_number_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:hint="Account Number"
                    app:hintEnabled="true">

                    <EditText
                        android:id="@+id/merchant_account_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:background="@drawable/border_input"
                        android:inputType="number"
                        android:maxLength="16"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/merchant_ifsc_code_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:hint="IFSC Code"
                    app:hintEnabled="true">

                    <EditText
                        android:id="@+id/merchant_ifsc_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:background="@drawable/border_input"
                        android:inputType="textPersonName"
                        android:maxLength="15"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/merchant_mobile_number_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="10dp"
                    android:hint="Mobile Number "
                    app:hintEnabled="true">

                    <EditText
                        android:id="@+id/merchant_mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_input"
                        android:inputType="phone"

                        android:maxLength="10"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/merchant_email_address_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:hint="E-mail"
                    app:hintEnabled="true">

                    <EditText
                        android:id="@+id/merchant_email_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/border_input"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"
                        android:textSize="18sp" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/button_next_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/border_button_colored"
                    android:paddingTop="10dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="#fff" />
            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>
