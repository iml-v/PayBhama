<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="inc.developer.vivonk.paybhama.Activities.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:background="#aaa"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/merchant_aadhar_number_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:hint="Aadhar Number"

                app:hintEnabled="true">

                <EditText
                    android:id="@+id/merchant_aadhar_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/border_input"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_input">

                <Spinner
                    android:id="@+id/user_caste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_input"
                    android:entries="@array/india_banks"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:textSize="18dp"
                    />
            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/merchant_account_number_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:hint="Account Number"

                app:hintEnabled="true">

                <EditText
                    android:id="@+id/merchant_account_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:background="@drawable/border_input"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/merchant_ifsc_code_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:hint="IFSC Code"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/merchant_ifsc_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:background="@drawable/border_input"
                    android:inputType="textPersonName"
                    android:maxLength="15"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/merchant_mobile_number_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:hint="Mobile Number "
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/merchant_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_input"
                    android:inputType="phone"

                    android:maxLength="10"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/merchant_email_address_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:hint="E-mail"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/merchant_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/border_input"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border_button_colored"
                android:paddingTop="10dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#fff" />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
