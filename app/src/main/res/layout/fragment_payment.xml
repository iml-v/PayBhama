<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <Button
        android:id="@+id/button_user_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_backspace_t"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:paddingStart="15dp"
        android:background="@drawable/border_button"
        android:drawableEnd="@drawable/ic_near_me_black_18dp"
        android:layout_margin="40sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"
        android:layout_margin="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Send to another Bank Account"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        tools:ignore="MissingPrefix"/>
    <EditText
        android:id="@+id/sending_account_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_gradient"
        android:drawablePadding="10dp"
        android:hint="A/C No."
        android:paddingEnd="10dp"
        android:layout_margin="20dp"
        android:paddingStart="10dp"
        android:inputType="numberDecimal"
        android:padding="6dp"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/sending_ifsc_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_gradient"
        android:drawablePadding="10dp"
        android:hint="IFSC Code"
        android:layout_margin="20dp"
        android:inputType="textPersonName"
        android:padding="6dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/sending_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_gradient"
        android:drawablePadding="10dp"
        android:hint="Sending for"
        android:layout_margin="20dp"
        android:inputType="textPersonName"
        android:padding="6dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textSize="18dp"
        />
    <Button
        android:id="@+id/button_send_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/border_button_colored"
        android:paddingTop="10dp"
        android:text="Send Money"
        android:textAllCaps="false"
        android:textColor="#fff" />

</LinearLayout>